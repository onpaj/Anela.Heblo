{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Authentication": "Warning",
      "Microsoft.IdentityModel": "Warning",
      "Microsoft.Hosting.Lifetime": "Warning",
      "Anela.Heblo.API": "Warning"
    },
    "ApplicationInsights": {
      "LogLevel": {
        "Default": "Warning",
        "Microsoft.AspNetCore": "Warning"
      }
    }
  },
  "AllowedHosts": "*",
  "UseMockAuth": false,
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:8080"
      }
    }
  },
  "ApplicationInsights": {
    "ConnectionString": "",
    "CloudRole": "Heblo-API-Production",
    "CloudRoleInstance": "Production",
    "EnableLiveMetrics": false,
    "EnablePerformanceCounters": false,
    "EnableEventCounters": false,
    "EnableHeartbeat": true,
    "SamplingSettings": {
      "MaxTelemetryItemsPerSecond": 5,
      "EvaluationInterval": "00:00:15",
      "InitialSamplingPercentage": 30,
      "MinSamplingPercentage": 0.1,
      "MaxSamplingPercentage": 50
    }
  },
  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    "TenantId": "---- Injected via app service env variables ----",
    "ClientId": "---- Injected via app service env variables ----",
    "ClientSecret": "", 
    "Scopes": "User.Read User.ReadAll openid profile",
    "CallbackPath": "/signin-oidc"
  },
  "DownstreamApi": {
    "BaseUrl": "https://graph.microsoft.com/v1.0",
    "Scopes": ["user.read", "user.readall"]
  }
}